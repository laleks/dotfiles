{
    "position": "top",
    "margin-top": 7,
    "margin-bottom": 0,

    "layer": "top",
    "height": 35,
    "margin-left": 0,
    "margin-right": 0,    
    "spacing": 4,

    // Choose the order of the modules
    "modules-left": ["wlr/taskbar", "hyprland/window"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["tray", "idle_inhibitor", "pulseaudio", "network", "cpu", "temperature", "hyprland/language", "clock"],

// Modules configuration

  "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        }
    },


    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close"
    },
   
    "hyprland/window": {
